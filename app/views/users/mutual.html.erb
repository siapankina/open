<h2>You have <%= @mutual_friend_count %> <%= @mutual_friend_count == 1 ? 'mutual friend' : 'mutual friends'%> with <%= @person.name %>: </h2>

<% if !@mutual_friends.empty? %>
    <% @mutual_friends.each do |u| %>
        <%= display_thumbnail(u) %><br>
        <p><%= link_to(u.name, user_path(u))%></p>
    <% end %>
<% end %>

<p><%= link_to("Back", user_path(@person)) %></p>